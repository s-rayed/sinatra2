<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"</a> <small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
    <p>
      <%= message.url %>
    </p>
    <p>
      <%= message.created_at %>
    </p>
  </div>
<% end %>
